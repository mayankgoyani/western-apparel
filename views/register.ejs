<%- include ('partials/header') %>
  <%- include ('partials/navbar') %>



    <div>
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <br>
          <br>
          <h3>User Signup</h3>
          <form id="myForm" action="" method="POST">
            <div class="form-group">
              <label for="">First Name:</label>
              <input type="text" class="form-control" name="firstname" placeholder="First Name" id="firstname">
            </div>
            <br>
            <div class="form-group">
              <label for="">Last Name:</label>
              <input type="text" class="form-control" name="lastname" placeholder="Last Name" id="lastname">
            </div>
            <br>
            <div class="form-group">
              <label for="">Birth Date</label>
              <input type="date" class="form-control" name="birthdate" placeholder="Birth Date" id="birthday">
            </div>
            <br>
            <div class="form-group">
              <label for="">Email:</label>
              <input type="text" class="form-control" name="email" placeholder="Email" id="email">
            </div>
            <br>

            <div class="form-group">
              <label for="pwd">Password:</label>
              <input type="password" class="form-control" name="password" placeholder="Password" id="password">
            </div>
            <br>
            <div class="form-group">
              <label for="pwd">Confirm Password:</label>
              <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" id="confirmPassword">
            </div>

            <br>


            <input type="submit" class="btn btn-warning" value="Sign Up" id="signupButton">
          </form>


        </div>
        <div class="col-md-3"></div>
      </div>
    </div>
    
    <%- include ('partials/footer') %>